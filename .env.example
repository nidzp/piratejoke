# TMDB API - https://www.themoviedb.org/settings/api
# Get your Read Access Token (v4)
TMDB_BEARER=your_tmdb_bearer_token_here

# Watchmode API - https://api.watchmode.com/requestApiKey
# Free tier: ~1000 requests
WATCHMODE_API_KEY=your_watchmode_api_key_here

# Cloudflare Workers AI (optional) - https://dash.cloudflare.com
# For AI suggestions using Cloudflare's free tier
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Groq API (optional alternative) - https://console.groq.com
# Free tier available
GROQ_API_KEY=your_groq_api_key_here

# Server configuration
PORT=8787
